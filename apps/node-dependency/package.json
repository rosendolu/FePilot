{
    "name": "node-deps-tree",
    "displayName": "Node Deps Tree",
    "description": "Advanced VS Code extension for npm package management with graphical dependency visualization, hover information, visual package operations, and monorepo support.",
    "version": "1.1.2",
    "publisher": "rosendolu",
    "icon": "resources/node-dependencies.png",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/rosendolu/FePilot"
    },
    "homepage": "https://github.com/rosendolu/FePilot",
    "bugs": {
        "url": "https://github.com/rosendolu/FePilot/issues"
    },
    "keywords": [
        "npm",
        "dependencies",
        "package-manager",
        "visualization",
        "monorepo",
        "typescript",
        "node",
        "graphical",
        "hover",
        "tree-view"
    ],
    "engines": {
        "vscode": "^1.99.0"
    },
    "categories": [
        "Other",
        "Visualization"
    ],
    "activationEvents": [
        "workspaceContains:package.json"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "nodeDependencies",
                    "name": "Node Dependencies"
                }
            ]
        },
        "commands": [
            {
                "command": "nodeDependencies.refreshEntry",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "nodeDependencies.addNpmPackage",
                "title": "Node Dependencies: Add NPM Package",
                "icon": "$(plus)"
            },
            {
                "command": "nodeDependencies.editEntry",
                "title": "Edit Package",
                "icon": "$(edit)"
            },
            {
                "command": "nodeDependencies.removePackage",
                "title": "Remove Package",
                "icon": "$(trash)"
            },
            {
                "command": "nodeDependencies.openPackageHomepage",
                "title": "Open Homepage",
                "icon": "$(globe)"
            },
            {
                "command": "nodeDependencies.openNpmPage",
                "title": "Open NPM Page",
                "icon": "$(book)"
            },
            {
                "command": "nodeDependencies.checkForUpdates",
                "title": "Node Dependencies: Check for Updates"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "nodeDependencies.refreshEntry",
                    "when": "view == nodeDependencies",
                    "group": "navigation"
                },
                {
                    "command": "nodeDependencies.addNpmPackage",
                    "title": "Add NPM Package",
                    "when": "view == nodeDependencies",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "nodeDependencies.editEntry",
                    "when": "view == nodeDependencies",
                    "group": "inline"
                },
                {
                    "command": "nodeDependencies.removePackage",
                    "when": "view == nodeDependencies && viewItem == dependency",
                    "group": "inline"
                },
                {
                    "command": "nodeDependencies.openNpmPage",
                    "when": "view == nodeDependencies",
                    "group": "inline"
                },
                {
                    "command": "nodeDependencies.openPackageHomepage",
                    "when": "view == nodeDependencies"
                }
            ]
        },
        "configuration": [
            {
                "title": "FePilot",
                "properties": {
                    "fePilot.autoUpdate": {
                        "type": "boolean",
                        "default": true,
                        "description": "Enable automatic updates for the extension"
                    },
                    "fePilot.checkForUpdates": {
                        "type": "boolean",
                        "default": true,
                        "description": "Check for updates on startup"
                    },
                    "fePilot.updateChannel": {
                        "type": "string",
                        "enum": [
                            "stable",
                            "beta"
                        ],
                        "default": "stable",
                        "description": "Update channel preference"
                    }
                }
            }
        ]
    },
    "scripts": {
        "publish": "npm run compile && npm run changelog && npx -y vsce package",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "format": "npx prettier --write .",
        "watch": "tsc -watch -p ./",
        "lint": "eslint",
        "changelog": "npx standard-version",
        "package": "npx -y vsce package",
        "version:patch": "npm version patch && npm run publish",
        "version:minor": "npm version minor && npm run publish",
        "version:major": "npm version major && npm run publish",
        "prepublishOnly": "npm run compile && npm run lint"
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@stylistic/eslint-plugin": "^2.9.0",
        "@types/node": "^22",
        "@types/vscode": "^1.99.0",
        "eslint": "^9.13.0",
        "typescript": "catalog:",
        "typescript-eslint": "^8.39.0",
        "standard-version": "catalog:"
    },
    "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d"
}
